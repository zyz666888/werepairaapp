<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rela_photo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/selector_item">

            <ImageView
                android:id="@+id/image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/me" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/image"
                android:ellipsize="end"
                android:maxLength="12"
                android:text="我"
                android:textColor="#333333"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rela_photo"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#CCCCCC"></View>

        <LinearLayout
            android:id="@+id/rela_moneypackage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_item"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_below="@+id/view2"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/myfile" />

            <TextView
                android:id="@+id/tv_myfile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="我的文件"
                android:textColor="#333333"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rela_moneypackage"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#CCCCCC"></View>


        <LinearLayout
            android:id="@+id/rela_cardpackage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view3"
            android:background="@drawable/selector_item"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/worklist" />

            <TextView
                android:id="@+id/my_workorder"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="我的派工单"
                android:textColor="#333333"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rela_cardpackage"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#CCCCCC"></View>

        <LinearLayout
            android:id="@+id/rela_brow"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_item"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_below="@+id/view4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/sum" />

            <TextView
                android:id="@+id/tv_friendscircle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="经验总结"
                android:textColor="#333333"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rela_brow"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#CCCCCC"></View>

